  /* Word Rotation Animation */
  .word-rotator {
    display: inline-block;
    position: relative;
    vertical-align: bottom;
  }

  .word-rotator span {
    opacity: 0;
    white-space: nowrap;
    animation: rotateWords 25.5s infinite;
  }

  .word-rotator span:not(:first-child) {
    position: absolute;
    left: 0;
    bottom: 0;
  }

  .word-rotator span:nth-child(1) { animation-delay: 0s; }
  .word-rotator span:nth-child(2) { animation-delay: 1.5s; }
  .word-rotator span:nth-child(3) { animation-delay: 3s; }
  .word-rotator span:nth-child(4) { animation-delay: 4.5s; }
  .word-rotator span:nth-child(5) { animation-delay: 6s; }
  .word-rotator span:nth-child(6) { animation-delay: 7.5s; }
  .word-rotator span:nth-child(7) { animation-delay: 9s; }
  .word-rotator span:nth-child(8) { animation-delay: 10.5s; }
  .word-rotator span:nth-child(9) { animation-delay: 12s; }
  .word-rotator span:nth-child(10) { animation-delay: 13.5s; }
  .word-rotator span:nth-child(11) { animation-delay: 15s; }
  .word-rotator span:nth-child(12) { animation-delay: 16.5s; }
  .word-rotator span:nth-child(13) { animation-delay: 18s; }
  .word-rotator span:nth-child(14) { animation-delay: 19.5s; }
  .word-rotator span:nth-child(15) { animation-delay: 21s; }
  .word-rotator span:nth-child(16) { animation-delay: 22.5s; }
  .word-rotator span:nth-child(17) { animation-delay: 24s; }

  @keyframes rotateWords {
    0% { opacity: 0; transform: translateY(5px); }
    2% { opacity: 1; transform: translateY(0); }
    5.5% { opacity: 1; transform: translateY(0); }
    7.5% { opacity: 0; transform: translateY(-5px); }
    100% { opacity: 0; transform: translateY(-5px); }
  }
</style>

