  /* 3D Flip Card Styles */
  .perspective-1000 {
    perspective: 1000px;
  }

  .transform-style-3d {
    transform-style: preserve-3d;
  }

  .backface-hidden {
    backface-visibility: hidden;
  }

  .rotate-y-180 {
    transform: rotateY(180deg);
  }

  .flip-card {
    transition: transform 0.7s;
  }

  .flip-card.flipped {
    transform: rotateY(180deg);
  }

  @media (hover: hover) {
    .flip-card-container:hover .flip-card {
