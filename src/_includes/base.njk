<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover, minimal-ui">

  <!-- Primary Meta Tags -->
  <title>{{ title | default("QUARX - Biopharma Consulting") }}</title>
  <meta name="title" content="{{ title | default('QUARX - Biopharma Consulting') }}">
  <meta name="description" content="{{ description | default('We maximize the impact and value of biopharma innovations through real world data and analytics') }}">
  <meta name="keywords" content="biopharma, consulting, real world data, analytics, healthcare, market access, customer engagement, BASIS, CHORD, LARA">
  <meta name="author" content="QUARX">
  <meta name="robots" content="index, follow">
  <meta name="theme-color" content="#0B3041">

  <!-- Canonical URL -->
  <link rel="canonical" href="{{ page.url | default('/') }}">

  <!-- Open Graph / Facebook -->
  <meta property="og:type" content="website">
  <meta property="og:url" content="{{ page.url | default('/') }}">
  <meta property="og:title" content="{{ title | default('QUARX - Biopharma Consulting') }}">
  <meta property="og:description" content="{{ description | default('We maximize the impact and value of biopharma innovations through real world data and analytics') }}">
  <meta property="og:image" content="/public/quarx-logo.png">
  <meta property="og:site_name" content="QUARX">
  <meta property="og:locale" content="en_US">

  <!-- Twitter -->
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:url" content="{{ page.url | default('/') }}">
  <meta name="twitter:title" content="{{ title | default('QUARX - Biopharma Consulting') }}">
  <meta name="twitter:description" content="{{ description | default('We maximize the impact and value of biopharma innovations through real world data and analytics') }}">
  <meta name="twitter:image" content="/public/quarx-logo.png">

  <!-- Favicon -->
  <link rel="icon" type="image/png" sizes="32x32" href="/public/quarx-logo.png">
  <link rel="icon" type="image/png" sizes="16x16" href="/public/quarx-logo.png">
  <link rel="apple-touch-icon" href="/public/quarx-logo.png">

  <!-- Resource Hints -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link rel="dns-prefetch" href="https://api.builder.io">

  <!-- Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Zilla+Slab:wght@300;500&display=swap" rel="stylesheet">

  <!-- Styles -->
  <link rel="stylesheet" href="/css/output.css">

  <!-- Structured Data (JSON-LD) -->
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@graph": [
      {
        "@type": "Organization",
        "name": "QUARX",
        "url": "{{ page.url | default('/') }}",
        "logo": "/public/quarx-logo.png",
        "description": "Biopharma consulting firm maximizing impact through real world data and analytics",
        "sameAs": []
      },
      {
        "@type": "WebSite",
        "name": "QUARX - Biopharma Consulting",
        "url": "{{ page.url | default('/') }}",
        "description": "We maximize the impact and value of biopharma innovations through real world data and analytics",
        "publisher": {
          "@type": "Organization",
          "name": "QUARX"
        }
      }
    ]
  }
  </script>

  <!-- htmx -->
  <script src="/js/htmx.min.js" defer></script>

  <!-- Alpine.js -->
  <script src="/js/alpine.min.js" defer></script>
</head>
<body hx-boost="true" class="bg-white">
  {% include "header.njk" %}

  {{ content | safe }}

  {% include "footer.njk" %}
</body>
</html>
