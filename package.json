{
  "name": "quarx-website",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "QUARX biopharma consulting website built with 11ty, htmx, and Alpine.js",
  "scripts": {
    "dev": "concurrently \"eleventy --serve\" \"tailwindcss -i src/index.css -o _site/css/output.css --watch\"",
    "build": "eleventy && tailwindcss -i src/index.css -o _site/css/output.css --minify",
    "clean": "rm -rf _site",
    "optimize-images": "node scripts/optimize-images.js"
  },
  "dependencies": {
    "alpinejs": "^3.15.0",
    "htmx.org": "^2.0.7"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "postcss": "^8.5.6",
    "sharp": "^0.34.4",
    "tailwindcss": "^3.4.17"
  }
}
